@model OrderDetailsComponentViewModel
@{
    int orderId = Model.OrderDetailsViewModel.OrderId;
    string orderNumber = Model.OrderDetailsViewModel.Number;
    string providerName = Model.OrderDetailsViewModel.ProviderName;
    DateTime date = Model.OrderDetailsViewModel.Date;
    var orderItems = Model.OrderDetailsViewModel.OrderItems;
}
<div class="row gap-2">
    <h2 class="text-center">Заказ № @orderNumber</h2>
    <div class="card p-3">
        <h3 class="card-title">Информация о заказе</h3>
        <div class="row">
            <div class="col-10">
                <h4>Идентификатор: @orderId</h4>
                <h4>Поставщик: @providerName</h4>
                <h4>Дата заказа: @date.ToLocalTime().ToShortDateString()</h4>
            </div>
            <div class="col-2 d-flex flex-column gap-2">
                <a asp-controller="Order" asp-action="Update" asp-route-orderId="@orderId"
                    class="btn btn-primary">Редактировать</a>
                <form asp-controller="Order" asp-action="Delete" method="post" asp-route-orderId="@orderId">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100"
                        onclick="return confirm('Вы уверены, что хотите удалить заказ номер @orderId ?')">Удалить</button>
                </form>
            </div>

        </div>
    </div>

    <div class="card p-3">
        <h3 class="card-title">Позиции в заказе</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Наименование</th>
                    <th>Количество</th>
                    <th>Единица измерения</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItem in orderItems)
                {
                    <tr>
                        <td>@orderItem.Id</td>
                        <td>@orderItem.Name</td>
                        <td>@orderItem.Quantity</td>
                        <td>@orderItem.Unit</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>